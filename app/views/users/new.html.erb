<div class="row mt-4">
   
   <div class="col-8">
      <%= image_tag 'ceysi.jpg' %>
   </div>

   <div class="col-4">
      <%= form_for @user do |f|%>
         <div class="form-group">
            <%= f.text_field :username, placeholder:'Username', class:'form-control' %>
         </div>
         <div class="form-group">
            <%= f.password_field :password, placeholder:'Password', class:'form-control' %>
         </div>
         <%= submit_tag "Crear cuenta", class:"btn btn-primary"%>
      <%end%>
      
      <hr>
      <%= link_to 'Ya posee una cuenta', login_path %>
   </div>

</div>

